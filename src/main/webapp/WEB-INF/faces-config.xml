<?xml version="1.0" encoding="utf-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xi="http://www.w3.org/2001/XInclude"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
 <!-- ######################################################################### -->
 <!-- main properties -->
 <!-- ######################################################################### -->
 <application>
  <!-- default language -->
  <locale-config>
   <default-locale>de</default-locale>
  </locale-config>
  <!-- shared message-strings -->
  <resource-bundle>
   <base-name>text</base-name>
   <var>txt</var>
  </resource-bundle>
  <!-- shared image-paths -->
  <resource-bundle>
   <base-name>images</base-name>
   <var>img</var>
  </resource-bundle>
  <!-- basic configuration properties -->
  <resource-bundle>
   <base-name>config</base-name>
   <var>config</var>
  </resource-bundle>
 </application>
 <factory>
  <exception-handler-factory>
  org.omnifaces.exceptionhandler.FullAjaxExceptionHandlerFactory</exception-handler-factory>
 </factory>
 <lifecycle>
  <phase-listener>
  de.uniwue.info6.webapp.session.AuthorizationListener</phase-listener>
 </lifecycle>
 <!-- ######################################################################### -->
 <!-- error pages -->
 <!-- ######################################################################### -->
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>expired</from-outcome>
   <to-view-id>/errorpages/expired.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>logout</from-outcome>
   <to-view-id>/errorpages/logout.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>login</from-outcome>
   <to-view-id>/misc/login.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>permission</from-outcome>
   <to-view-id>/errorpages/permission_denied.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>starterror</from-outcome>
   <to-view-id>/errorpages/error_page.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>error</from-outcome>
   <to-view-id>/pages/error.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <!-- ######################################################################### -->
 <!-- main pages -->
 <!-- ######################################################################### -->
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>home</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>submission</from-outcome>
   <to-view-id>/submission.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>edit_submission</from-outcome>
   <to-view-id>/edit_submission.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>rights</from-outcome>
   <to-view-id>/user_rights.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>exercise</from-outcome>
   <to-view-id>/task.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>admin</from-outcome>
   <to-view-id>/admin.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/admin.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>edit_sc</from-outcome>
   <to-view-id>/edit_scenario.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/admin.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>edit_gr</from-outcome>
   <to-view-id>/edit_group.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/admin.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>edit_ex</from-outcome>
   <to-view-id>/edit_ex.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
</faces-config>
